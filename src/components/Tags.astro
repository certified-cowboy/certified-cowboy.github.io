---
import tags from '../data/tags.json';

const entries = Object.entries(tags);
---

<h1 class="text-3xl text-purple-700 text-center w-5/6 md:w-1/2 lg:w-1/4 mb-7 border-b-4 border-dashed border-purple-700 pb-2">
    Příznaky
</h1>

<div class="bg-indigo-100 border-4 border-indigo-900 max-w-2xl w-full p-6 rounded-lg retro-frame">
    <ul class="space-y-3">
        {entries.map(([abbr, meaning]) => (
            <li class="bg-white border-2 border-indigo-900 rounded-md px-4 py-2 retro-tag">
                <span class="text-lg font-bold text-indigo-800">{abbr}</span>
                <span class="text-black/80 ml-2 break-words" set:html={meaning}></span>
            </li>
        ))}
    </ul>
</div>